<div class="card p-3 my-5 border-success">
  <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
    <%= render 'shared/errors', resource: @answer %>
    <div class="form-group">
      <h1 class="display-4"><%= answer_header(@answer) %></h1>

      <p>
        <%= form.label :body %><br>
        <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60, class: 'form-control' %>
      </p>

      <p>
        <%= form.label :correct %>:
        <%= form.check_box :correct, id: :answer_correct%>
      </p>

      <p><%= form.submit class: 'btn btn-success'%> </p>
      <%= link_to 'Back', admin_question_path(@answer.question), class: 'btn btn-dark'  %>
    </div>
  <% end %>
</div>
