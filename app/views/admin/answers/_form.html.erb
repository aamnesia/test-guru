<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <h1 class="display-4"><%= answer_header(@answer) %></h1>

  <p>
    <%= @answer.question.body %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60%>
  </p>

  <p>
    <%= form.label :correct %>:
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p><%= form.submit %> </p>
  <%= link_to 'Back', admin_question_path(@answer.question) %>
<% end %>
