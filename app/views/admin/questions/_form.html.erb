<%= form_with model: [:admin, @test, @question] do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <h1 class="display-4"><%= question_header(@question) %></h1>

  <p>
    <%= form.label :test %><br>
    <%= form.collection_select :test_id, Test.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body, id: :question_body %>
  </p>

  <p><%= form.submit %></p>
  <%= link_to 'Back', admin_test_path(@question.test) %>
<% end %>
