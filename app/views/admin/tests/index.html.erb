<h1 class="display-4"><%= t('.header') %></h1>

<%= render 'shared/errors', resource: @test  %>

<p>
  <%= link_to t('.new'), new_admin_test_path, class: 'btn btn-success' %>
</p>

<table class="table table-striped table-bordered">
  <thead>
    <tr class="text-center">
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide'%>
        <%= octicon 'arrow-down', class: 'text-success hide'%>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.questions') %></th>
      <th> Timer </th>
      <th> Ready? </th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <%= render @tests %>
</table>
