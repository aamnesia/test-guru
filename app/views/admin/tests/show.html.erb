<h1 class="display-4"><%= @test.category.title %> Test</h1>

<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>


<%= link_to t('.new_question'), new_admin_test_question_path(@test), class: 'btn btn-success' %>

<table class="table table-striped table-dark table-bordered">
  <h2 class="text-center">Questions</h2>
  <thead>
    <tr class="text-center">
      <th>Question</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
<%= render @test.questions %>
</table>


<%= link_to t('action.edit'), edit_admin_test_path(@test), class: 'btn btn-dark'%>
<%= link_to t('action.back'), admin_tests_path, class: 'btn btn-dark' %>
