<div class="row justify-content-center mt-3">
  <h1 class="display-4"><%= t('.header', title: @test_passage.test.title) %>
  </h1>

  <div class="col col-sm-12 col-md-8 card">
    <div class="card-body">
      <div class="badge badge-sm badge-dark">
        <%= "#{@test_passage.current_question_index + 1}" %>/
        <%= @test_passage.number_of_questions %>
      </div>
      <b>
        <%= @test_passage.current_question.body %>
      </b>

      <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form|%>
      <div class="form-group">
        <div class="form-check">
          <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
          <%= b.check_box id: "answer_ids_#{b.object.id}", class: "form-check-input" %>
          <%= b.label class: "form-check-label" %>
          <br>
          <% end %>
        </div>

        <p><%= form.submit t('action.next'), class: "btn btn-success"  %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
